package nilcmpfix

import (
	"testing"

	qt "github.com/frankban/quicktest"
)

func TestNilComparisonFix(t *testing.T) {
	c := qt.New(t)
	var x *int

	qt.Assert(t, x, qt.IsNil)      // want "qtlint: use qt.IsNil instead of x == nil, qt.IsTrue"
	c.Assert(x, qt.IsNil)          // want "qtlint: use qt.IsNil instead of x == nil, qt.IsTrue"

	qt.Assert(t, x, qt.IsNotNil)   // want "qtlint: use qt.IsNotNil instead of x == nil, qt.IsFalse"
	c.Assert(x, qt.IsNotNil)       // want "qtlint: use qt.IsNotNil instead of x == nil, qt.IsFalse"

	qt.Check(t, x, qt.IsNotNil)    // want "qtlint: use qt.IsNotNil instead of x != nil, qt.IsTrue"
	c.Check(x, qt.IsNotNil)        // want "qtlint: use qt.IsNotNil instead of x != nil, qt.IsTrue"

	qt.Check(t, x, qt.IsNil)       // want "qtlint: use qt.IsNil instead of x != nil, qt.IsFalse"
	c.Check(x, qt.IsNil)           // want "qtlint: use qt.IsNil instead of x != nil, qt.IsFalse"
}
