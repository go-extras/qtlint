package eqistruefix

import (
	"testing"

	qt "github.com/frankban/quicktest"
)

func TestEqualityIsTrueFix(t *testing.T) {
	c := qt.New(t)
	x := 42
	y := 42

	qt.Assert(t, x, qt.Equals, y)    // want "qtlint: use qt.Equals instead of x == y, qt.IsTrue"
	c.Assert(x, qt.Equals, y)        // want "qtlint: use qt.Equals instead of x == y, qt.IsTrue"

	a := "hello"
	b := "hello"
	qt.Check(t, a, qt.Equals, b)     // want "qtlint: use qt.Equals instead of x == y, qt.IsTrue"
	c.Check(a, qt.Equals, b)         // want "qtlint: use qt.Equals instead of x == y, qt.IsTrue"
}
